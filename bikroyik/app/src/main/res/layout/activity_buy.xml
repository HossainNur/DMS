<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.activity.BuyActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="29dp"
        >

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="খরচের পরিমাণ(টাকা)"
            android:textSize="20sp"
            android:textStyle="bold"
            />
        <EditText
            android:id="@+id/etExpenseAmount"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:hint="Amount"
            android:drawableStart="@drawable/ic_baseline_attach_money_24"
            android:paddingStart="11dp"
            android:elevation="6dp"
            android:drawablePadding="4dp"
            android:inputType="numberDecimal"
            android:background="@drawable/edit_background"
            android:textSize="20sp"
            />
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_weight="1"
            android:text="খরচের কারণ"
            android:textSize="20sp"
            android:textStyle="bold"
            />
        <EditText
            android:id="@+id/etExpenseDetails"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:padding="2dp"
            android:layout_marginTop="16dp"
            android:drawableStart="@drawable/ic_baseline_note_24"
            android:paddingStart="11dp"
            android:elevation="6dp"
            android:drawablePadding="8dp"
            android:layout_weight="1"
            android:hint="For:"
            android:inputType="text"
            android:background="@drawable/edit_background"
            android:textSize="20sp"
            />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Date:"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginTop="30dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/datePickerButton"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="JAN 01 2020"
            android:textSize="20sp"
            android:textColor="@color/black"
            style="?android:spinnerStyle"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            android:layout_marginTop="10dp"
            android:onClick="openDatePicker"/>

        <ImageView
            android:id="@+id/add_expense_image"
            android:layout_marginTop="20dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_baseline_add_a_photo_24"
            />



        <Button
            android:id="@+id/savebtnId"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:textColor="@color/white"
            android:text="সেভ করুন"
            android:background="@color/black_50"
            android:padding="11dp"
            android:textSize="20dp"
            />
    </LinearLayout>




</LinearLayout>